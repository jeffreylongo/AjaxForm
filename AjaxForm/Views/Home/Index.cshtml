@{
    ViewBag.Title = "Home Page";
}

<div class="wrapper">
    <div class="form-signin">
        <h2 class="form-signin-heading">Lead Entry</h2>
        <input class="form-control" id ="firstName" placeholder="First Name" required="" />
        <input class="form-control"  id ="lastName" placeholder="Last Name" required="" />
        <input class="form-control" id ="eMail" placeholder="Email" required="" />
        <input class="form-control" id ="phone" placeholder="Phone" required="" />
        <div class="form-group">
            <label for="cell">Mobile Phone #:</label>
            <select class="form-control" id="cell">
                <option>Yes</option>
                <option>No</option>
            </select>
        </div>
        <label class="checkbox">
            <input type="checkbox" value="optOut" id="optOut" name="optOut"> Opt out of Email
        </label>
        <button onclick="sendForm();" class="btn btn-lg btn-primary" type="submit">Add Lead</button>
    </div>
    <div class="jumbotron">
        <h2>Hot Leads</h2>
        <ul id="formData"></ul>
    </div>
</div>

<hr />


